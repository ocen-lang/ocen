    // Keywords
    And => "and"
    As => "as"
    Bool => "bool"
    Break => "break"
    Char => "char"
    Const => "const"
    Continue => "continue"
    Def => "def"
    Defer => "defer"
    Else => "else"
    Enum => "enum"
    Extern => "extern"
    False => "false"
    F32 => "f32"
    F64 => "f64"
    For => "for"
    Fn => "fn"
    I8 => "i8"
    I16 => "i16"
    I32 => "i32"
    I64 => "i64"
    If => "if"
    Let => "let"
    Match => "match"
    Namespace => "namespace"
    Not => "not"
    Null => "null"
    Or => "or"
    Return => "return"
    SizeOf => "sizeof"
    String => "string"
    Struct => "struct"
    True => "true"
    Then => "then"
    U8 => "u8"
    U16 => "u16"
    U32 => "u32"
    U64 => "u64"
    UntypedPtr => "untyped_ptr"
    Union => "union"
    Import => "import"
    Void => "void"
    Yield => "yield"
    While => "while"

    // Others
    else => .dbg()
}
